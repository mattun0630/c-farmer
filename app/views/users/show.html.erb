<h3>ユーザ詳細</h3>

<h5>姓（漢字）</h5>
<%= @user.user_name %>
<h5>郵便番号</h5>
<%= @user.post %>
<h5>住所</h5>
<%= @user.a_address %>
<h5>電話番号</h5>
<%= @user.phone %>
<h5>メールアドレス</h5>
<%= @user.email %>

<% if @user.id == current_user.id %>
	<%= link_to "プロフィール編集", edit_user_path(@user) %>
	<%= link_to '退会', user_path(@user), method: :delete, data: { confirm: '退会しますか？' }%>
<% end %>



